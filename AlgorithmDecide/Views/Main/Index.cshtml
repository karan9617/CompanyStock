
@{
    Layout = "../Shared/_LayoutForMainPage.cshtml";
    ViewData["title"] = "Nexus";
}



<h1>
    Hello 
</h1>

@using (Html.BeginForm("Index", "Main", FormMethod.Post))
{
    <h3>Get Employee Insurance details</h3>
    <br />

    <p>Employee Name:</p>
    <br />
    <input type="text" name="EmployeeName" placeholder="Employee name" />
    <br />
    <input type="submit" value="Get details" />
}
@if (ViewData["result"] != null)
{
<table>
    @foreach (EmployeeInsurance obj in (List<EmployeeInsurance>)ViewData["result"])
    {

        <tr>
            <td>@obj.EmployeeName</td>
            <td>@obj.Salary</td>
            <td>@obj.InsuranceName</td>
        </tr>

    }
</table>
}
